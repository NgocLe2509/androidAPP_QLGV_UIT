<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ctTestSchedual"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView

        android:id="@+id/imgNoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_content_paste_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPhong"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgNoiDung"
        app:layout_constraintTop_toBottomOf="@+id/tvRoom"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgTenLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_baseline_class_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMaLop"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgNgay"
        app:layout_constraintTop_toBottomOf="@+id/tvTenLop"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTenLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgTenLop"
        app:layout_constraintTop_toBottomOf="@+id/tvMaLop"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgMaLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_baseline_wysiwyg_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_baseline_access_alarms_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTenLop"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvLoaiTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/colorRed"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view8"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLoaiTB" />

    <TextView
        android:id="@+id/tvMaLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgMaLop"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgTiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_baseline_calendar_today_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgNgay"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgTiet"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        tools:ignore="MissingConstraints" />

    <ImageView

        android:id="@+id/imgPhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_room_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTiet"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgPhong"
        app:layout_constraintTop_toBottomOf="@+id/tvDay"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>