<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/ctTestSchedual"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgThoiGian"
        app:layout_constraintTop_toBottomOf="@+id/tvConLai"
        tools:ignore="MissingConstraints" />

    <TextView

        android:id="@+id/imgThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Thời gian: "
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvTai"
        app:layout_constraintTop_toBottomOf="@+id/tvConLai"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgTai"
        app:layout_constraintTop_toBottomOf="@+id/tvConLai"
        tools:ignore="MissingConstraints" />

    <TextView

        android:id="@+id/imgTai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Tại: "
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConLai"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/imgTenLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Chi tiết ĐKHP: "
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSoMon"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgNgay"
        app:layout_constraintTop_toBottomOf="@+id/tvdkhp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvdkhp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgTenLop"
        app:layout_constraintTop_toBottomOf="@+id/tvSoMon"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/imgMaLop"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Số Môn:"
        android:textSize="15dp"
        android:textColor="@color/colorBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/imgNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Nợ trước + Phải đóng = "
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdkhp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvHocKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/colorRed"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view8"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHocKi" />

    <TextView
        android:id="@+id/tvSoMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgMaLop"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/imgTiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Đã đóng: "
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTong"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvDaDong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgTiet"
        app:layout_constraintTop_toBottomOf="@+id/tvTong"
        tools:ignore="MissingConstraints" />

    <TextView

        android:id="@+id/imgPhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Còn lại: "
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDaDong"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvConLai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorBack"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imgPhong"
        app:layout_constraintTop_toBottomOf="@+id/tvDaDong"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>